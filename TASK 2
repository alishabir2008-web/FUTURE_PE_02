<body>
    <div class="chat-container">
        <div class="chat-header">
            <h1>Simple FAQ Chatbot</h1>
            <p>Ask me: hi, weather, jokes, recipes, productivity tips, and more!</p>
        </div>
        
        <div class="chat-messages" id="messagesContainer">
            <div class="message bot-message">
                <div>Hello! I'm a simple chatbot that can answer common questions. Try asking about the weather, a joke, a recipe, or productivity tips!</div>
                <div class="time" id="currentTime"></div>
            </div>
        </div>
        
        <div class="suggestions">
            <button class="suggestion" data-question="Hi">Say Hi</button>
            <button class="suggestion" data-question="How are you?">How are you?</button>
            <button class="suggestion" data-question="What can you do?">Your capabilities</button>
            <button class="suggestion" data-question="Tell me a joke">Get a joke</button>
            <button class="suggestion" data-question="Weather today">Weather</button>
            <button class="suggestion" data-question="Give me a recipe">Recipe</button>
            <button class="suggestion" data-question="Productivity tips">Productivity</button>
        </div>
        
        <div class="typing-indicator" id="typingIndicator">
            <span></span>
            <span></span>
            <span></span>
        </div>
        
        <div class="chat-input">
            <input type="text" id="messageInput" placeholder="Ask me anything..." autocomplete="off">
            <button id="sendButton">Send</button>
        </div>
    </div>

    <script>
        // DOM Elements
        const messagesContainer = document.getElementById('messagesContainer');
        const messageInput = document.getElementById('messageInput');
        const sendButton = document.getElementById('sendButton');
        const typingIndicator = document.getElementById('typingIndicator');
        const suggestions = document.querySelectorAll('.suggestion');
        const currentTimeElement = document.getElementById('currentTime');
        
        // Update the time in the welcome message
        function updateCurrentTime() {
            const now = new Date();
            currentTimeElement.textContent = `Sent at ${now.getHours()}:${now.getMinutes().toString().padStart(2, '0')}`;
        }
        
        // Initialize
        updateCurrentTime();
        
        // Knowledge base with FAQ responses
        const knowledgeBase = {
            greetings: [
                "Hello! How can I help you today?",
                "Hi there! Nice to meet you!",
                "Hey! What can I do for you?"
            ],
            
            feelings: [
                "I'm doing great, thanks for asking! How about you?",
                "I'm functioning perfectly! Ready to help.",
                "I'm excellent today! What's on your mind?"
            ],
            
            capabilities: [
                "I can tell you the weather, share jokes, give recipes, productivity tips, and answer simple questions.",
                "I can help with: weather updates, jokes, cooking recipes, productivity advice, and general information.",
                "My skills include: weather information, joke telling, recipe sharing, productivity tips, and answering FAQs."
            ],
            
            weather: [
                "I can't access real-time weather, but I can tell you that perfect indoor working temperature is around 22°C (72°F)!",
                "I don't have live weather data, but I recommend checking a weather app for accurate forecasts.",
                "For ideal productivity, keep your environment at a comfortable temperature around 20-24°C (68-75°F)."
            ],
            
            jokes: [
                "Why don't scientists trust atoms? Because they make up everything!",
                "Why did the scarecrow win an award? Because he was outstanding in his field!",
                "Why don't eggs tell jokes? They'd crack each other up!",
                "What do you call a fake noodle? An impasta!",
                "Why did the math book look so sad? Because it had too many problems!",
                "Why did the computer go to the doctor? It had a virus!"
            ],
            
            recipes: [
                `<div class="recipe-box">
                    <strong>Quick Pasta Recipe:</strong><br>
                    1. Boil water with a pinch of salt<br>
                    2. Add pasta and cook for 8-10 minutes<br>
                    3. Sauté garlic in olive oil<br>
                    4. Add your favorite sauce and heat through<br>
                    5. Combine pasta with sauce and serve!
                </div>`,
                
                `<div class="recipe-box">
                    <strong>Simple Salad:</strong><br>
                    1. Chop lettuce, tomato, cucumber, bell peppers<br>
                    2. Add protein like grilled chicken or chickpeas<br>
                    3. Drizzle with olive oil, lemon juice, salt, and pepper<br>
                    4. Toss well and enjoy a healthy meal!
                </div>`,
                
                `<div class="recipe-box">
                    <strong>Easy Smoothie:</strong><br>
                    1. Blend 1 banana, 1 cup berries, 1 cup milk/yogurt<br>
                    2. Add a spoon of honey or maple syrup for sweetness<br>
                    3. Blend until smooth<br>
                    4. Pour into a glass and enjoy immediately!
                </div>`
            ],
            
            productivity: [
                `<div class="productivity-tip">
                    <strong>Pomodoro Technique:</strong> Work for 25 minutes, then take a 5-minute break. After 4 cycles, take a longer break (15-30 minutes).
                </div>`,
                
                `<div class="productivity-tip">
                    <strong>Time Blocking:</strong> Schedule your day in blocks dedicated to specific tasks to maintain focus and reduce multitasking.
                </div>`,
                
                `<div class="productivity-tip">
                    <strong>2-Minute Rule:</strong> If a task takes less than 2 minutes, do it immediately instead of putting it off.
                </div>`,
                
                `<div class="productivity-tip">
                    <strong>Digital Detox:</strong> Take regular breaks from screens to reduce eye strain and mental fatigue.
                </div>`
            ],
            
            time: [
                `The current time is: ${new Date().toLocaleTimeString()}`,
                `It's ${new Date().toLocaleTimeString()} right now`,
                `According to my clock, it's ${new Date().toLocaleTimeString()}`
            ],
            
            date: [
                `Today is ${new Date().toDateString()}`,
                `The date is ${new Date().toDateString()}`,
                `It's ${new Date().toDateString()} today`
            ],
            
            default: [
                "I'm not sure I understand. Can you try asking differently?",
                "I don't have an answer for that yet. Try asking about weather, jokes, or recipes!",
                "That's an interesting question! I'm still learning, but I can help with common FAQs."
            ]
        };
        
        // Function to add a message to the chat
        function addMessage(message, isUser = false) {
            const messageDiv = document.createElement('div');
            messageDiv.classList.add('message');
            messageDiv.classList.add(isUser ? 'user-message' : 'bot-message');
            
            const messageContent = document.createElement('div');
            
            // Check if message contains HTML (like recipe or productivity boxes)
            if (message.includes('<div')) {
                messageContent.innerHTML = message;
            } else {
                messageContent.textContent = message;
            }
            
            messageDiv.appendChild(messageContent);
            
            const timeDiv = document.createElement('div');
            timeDiv.classList.add('time');
            const now = new Date();
            timeDiv.textContent = `Sent at ${now.getHours()}:${now.getMinutes().toString().padStart(2, '0')}`;
            messageDiv.appendChild(timeDiv);
            
            messagesContainer.appendChild(messageDiv);
            
            // Scroll to the bottom of the chat
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
        
        // Function to show typing indicator
        function showTypingIndicator() {
            typingIndicator.style.display = 'flex';
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
        
        // Function to hide typing indicator
        function hideTypingIndicator() {
            typingIndicator.style.display = 'none';
        }
        
        // Function to get bot response
        function getBotResponse(userMessage) {
            userMessage = userMessage.toLowerCase();
            
            if (userMessage.includes('hello') || userMessage.includes('hi') || userMessage.includes('hey')) {
                return knowledgeBase.greetings[Math.floor(Math.random() * knowledgeBase.greetings.length)];
            } else if (userMessage.includes('how are you') || userMessage.includes('how do you feel')) {
                return knowledgeBase.feelings[Math.floor(Math.random() * knowledgeBase.feelings.length)];
            } else if (userMessage.includes('what can you do') || userMessage.includes('capabilities')) {
                return knowledgeBase.capabilities[Math.floor(Math.random() * knowledgeBase.capabilities.length)];
            } else if (userMessage.includes('weather')) {
                return knowledgeBase.weather[Math.floor(Math.random() * knowledgeBase.weather.length)];
            } else if (userMessage.includes('joke')) {
                return knowledgeBase.jokes[Math.floor(Math.random() * knowledgeBase.jokes.length)];
            } else if (userMessage.includes('recipe') || userMessage.includes('cook')) {
                return knowledgeBase.recipes[Math.floor(Math.random() * knowledgeBase.recipes.length)];
            } else if (userMessage.includes('productivity') || userMessage.includes('tip')) {
                return knowledgeBase.productivity[Math.floor(Math.random() * knowledgeBase.productivity.length)];
            } else if (userMessage.includes('time')) {
                return knowledgeBase.time[Math.floor(Math.random() * knowledgeBase.time.length)];
            } else if (userMessage.includes('date')) {
                return knowledgeBase.date[Math.floor(Math.random() * knowledgeBase.date.length)];
            } else {
                return knowledgeBase.default[Math.floor(Math.random() * knowledgeBase.default.length)];
            }
        }
        
        // Function to handle user message
        function handleUserMessage() {
            const message = messageInput.value.trim();
            
            if (message === '') return;
            
            // Add user message to chat
            addMessage(message, true);
            messageInput.value = '';
            
            // Show typing indicator
            showTypingIndicator();
            
            // Simulate bot thinking time
            setTimeout(() => {
                hideTypingIndicator();
                const botResponse = getBotResponse(message);
                addMessage(botResponse);
            }, 800 + Math.random() * 800);
        }
        
        // Event listeners
        sendButton.addEventListener('click', handleUserMessage);
        
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                handleUserMessage();
            }
        });
        
        // Add event listeners to suggestion buttons
        suggestions.forEach(button => {
            button.addEventListener('click', () => {
                messageInput.value = button.getAttribute('data-question');
                handleUserMessage();
            });
        });
        
        // Set focus to input field
        messageInput.focus();
    </script>
</body>
</html>
